{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"incremental": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"paths": {
			"@abis/*": ["abis/*"],
			"@config/*": ["config/*"],
			"@constants/*": ["constants/*"],
			"@core/*": ["core/*"],
			"@entities/*": ["entities/*"],
			"@guards/*": ["guards/*"],
			"@shared/*": ["shared/*"],
			"@modules/*": ["modules/*"]
		},
		"esModuleInterop": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
